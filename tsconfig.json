{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["es6", "dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNEXT",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": "src",
        "paths": {
            "@pkg/react": ["./packages/react/index.ts"],
            "@pkg/next": ["./packages/next/index.ts"],
            "@pkg/utils": ["./packages/utils/index.ts"],
            "@pkg/_constants": ["./packages/_constants/index.ts"],
            "@app/_constants": ["./apps/_constants/index.ts"],
            "@app/react/*": ["./apps/react/*"],
            "@app/layouts/*": ["./apps/layouts/*"],
            "@app/types/*": ["./apps/types/*"],
            "@app/modules/*": ["./apps/modules/*"],
            "@app/contexts": ["./apps/contexts/index.ts"],
            "@css": ["./apps/styles/index.css"]
        },
        "incremental": true
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js"]
}
